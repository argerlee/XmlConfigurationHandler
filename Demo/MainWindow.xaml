<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            
            <CheckBox x:Name="CheckBoxFullScreen" Content="Full Screen" IsChecked="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            
            <StackPanel Orientation="Horizontal" Height="50">
                <Label Name="LabelFontSizeSetting" Content="Font Size" VerticalAlignment="Stretch" VerticalContentAlignment="Center"/>
                <TextBox x:Name="TextBoxFontSizeSetting" Text="" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200" Height="50" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <Button x:Name="ButtonApplyFontSize" Content="Apply Font Size" VerticalAlignment="Stretch"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
